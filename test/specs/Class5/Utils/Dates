const moment = require("moment");

class Dates {

    getCurrentDate() {
        const now = moment();
        return now.format('D');
    }

    getCurrentMonthNameInShort() {
        const now = moment();
        return now.format('MMM');
    }

    getCurrentYearNameInShort() {
        const now = moment();
        return now.format('YYYY');
    }

    static particularDateFormat() {
        const now = moment();
        return now.format('MMM D YYYY');
    }

}
module.exports = Dates;